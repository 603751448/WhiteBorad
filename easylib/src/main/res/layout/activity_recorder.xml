<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#000000"
              >
    <RelativeLayout
            android:id="@+id/video_top"
            android:layout_width="fill_parent"
            android:layout_height="89dp"
            android:background="#30111615">
        <LinearLayout
                android:id="@+id/switch_layout"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/video_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/btn_flash"/>
            <TextView
                    android:id="@+id/video_flash_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/video_flash"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffffff"/>
        </LinearLayout>
        <TextView
                android:id="@+id/video_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"/>
        <ImageView
                android:id="@+id/video_switch"
                android:src="@drawable/btn_switch"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
            android:id="@+id/video_bottom"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="#30111615"
            >
        <Button
                android:id="@+id/start_stop_recording"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_centerInParent="true"
                android:text="开始"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:background="@drawable/recorder_start_stop_button"/>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/video_frame"
            android:background="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</RelativeLayout>

